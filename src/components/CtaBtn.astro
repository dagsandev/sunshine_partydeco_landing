---
interface Props {
  title: string;
  hrefA: string;  
}

const { title, hrefA } = Astro.props;
---

<div class="cta-btn text:lg md:text-xl">
    <a class="btn" href={hrefA} target="_blank" role="button"> {title} </a>
</div>

</div>

<style>
     .cta-btn{
    margin-top: 1rem;
    background-color: rgb(251, 255, 0);
    border: 1px solid rgba(0, 0, 0, 0.452);
    border-radius: .5rem;
    padding: 10px 40px;
    text-align: center;
    max-width: 200px;
    cursor: pointer;
    font-weight: bold;
  }
  .cta-btn:hover{
    background-color: rgb(227, 231, 3);
  }
  .cta-btn:active{
    background-color: rgb(184, 187, 2);
  }
</style>